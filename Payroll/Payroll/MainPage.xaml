<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Payroll.MainPage"
             Title="Login">
   
    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <Image Source="login_background.png" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
               Aspect="AspectFill"/>
        <StackLayout Orientation="Vertical" >
            <Image Source="payroll.png" HorizontalOptions="FillAndExpand"
                   VerticalOptions="CenterAndExpand" Margin="20,60,20,0" Aspect="AspectFit" Opacity=".9"></Image>
            <Button TextColor="{StaticResource PrimaryBlue}"  BackgroundColor="White" Text="Login" FontSize="20"
                   Command="{Binding LoginCommand}" VerticalOptions="EndAndExpand" 
                    HorizontalOptions="FillAndExpand" CornerRadius="20"
                    Margin="30,30,30,60" Opacity=".9"></Button>
        </StackLayout>
    </Grid>
  

</ContentPage>



