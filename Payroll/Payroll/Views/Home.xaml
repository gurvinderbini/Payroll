<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Payroll.Views.Home"
             Title="Payroll App">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" IsVisible="{Binding LayoutVisibility}">
           <Label HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"
                  Text="Welcome to the Payroll App" TextColor="DodgerBlue" FontSize="Large" FontAttributes="Bold"/>
            <Button Text="Clear All Authentication" Command="{Binding ClearAuthenticationCommand}" Margin="10"
                    BackgroundColor="DodgerBlue" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>