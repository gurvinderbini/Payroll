            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                       
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>-->
    </ContentPage.Content>
</ContentPage>